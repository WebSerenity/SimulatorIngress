<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
     android:background="#000000" >

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/action_bar" />
	
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bt_border_off"
        android:gravity="center|center_horizontal"
        android:orientation="vertical" >
        
		<ScrollView
			android:id="@+id/scrollView1"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" 
			android:layout_gravity="center_horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bt_border_off"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/ImageView01"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/weapon_bt_left" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/TextView05"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="TextView"
                            android:textColor="@color/color_jaune" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/ImageView02"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/weapon_bt_right" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LinearLayout01"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/iv_border_off"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/ImageView03"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/weapon_medium_2" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bt_border_off"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/TextView02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/weapon_level"
                        android:textColor="@color/color_bleu" />

                    <TextView
                        android:id="@+id/TextView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/weapon_damage"
                        android:textColor="@color/color_bleu" />

                    <TextView
                        android:id="@+id/TextView06"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/weapon_range"
                        android:textColor="@color/color_bleu" />

                    <TextView
                        android:id="@+id/TextView03"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Zone 1"
                        android:textColor="@color/color_bleu" />

                    <TextView
                        android:id="@+id/TextView04"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Zone 1"
                        android:textColor="@color/color_bleu" />

                    <TextView
                        android:id="@+id/TextView08"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Zone 1"
                        android:textColor="@color/color_bleu" />

                    <TextView
                        android:id="@+id/TextView07"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Zone 1"
                        android:textColor="@color/color_bleu" />

                    <TextView
                        android:id="@+id/TextView09"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Zone 1"
                        android:textColor="@color/color_bleu" />

                    <TextView
                        android:id="@+id/TextView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/weapon_cost"
                        android:textColor="@color/color_bleu" />

                    <TextView
                        android:id="@+id/TextView01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/weapon_recycle"
                        android:textColor="@color/color_bleu" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bt_border_off"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/btWeaponLeft"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/weapon_bt_left" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tvWeaponTitre"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="TextView"
                        android:textColor="@color/color_jaune" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/btWeaponRight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/weapon_bt_right" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llWeaponImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/iv_border_off"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/ivWeapon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/weapon_medium_2" />
            </LinearLayout>



               
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bt_border_off"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tvWeaponInfoLevel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/weapon_level"
                        android:textColor="@color/color_bleu" />

                    <TextView
                        android:id="@+id/tvWeaponInfoDamage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/weapon_damage"
                        android:textColor="@color/color_bleu" />

                    <TextView
                        android:id="@+id/tvWeaponInfoRange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/weapon_range"
                        android:textColor="@color/color_bleu" />

                    <TextView
                        android:id="@+id/tvWeaponZone1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Zone 1"
                        android:textColor="@color/color_bleu" />

                    <TextView
                        android:id="@+id/tvWeaponZone2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Zone 1"
                        android:textColor="@color/color_bleu" />

                    <TextView
                        android:id="@+id/tvWeaponZone3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Zone 1"
                        android:textColor="@color/color_bleu" />

                    <TextView
                        android:id="@+id/tvWeaponZone4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Zone 1"
                        android:textColor="@color/color_bleu" />

                    <TextView
                        android:id="@+id/tvWeaponZone5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Zone 1"
                        android:textColor="@color/color_bleu" />

                    <TextView
                        android:id="@+id/tvWeaponInfoCost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/weapon_cost"
                        android:textColor="@color/color_bleu" />

                    <TextView
                        android:id="@+id/tvWeaponInfoRecycle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/weapon_recycle"
                        android:textColor="@color/color_bleu" />
                </LinearLayout>

          

        </LinearLayout>
		</ScrollView>
    </LinearLayout>

</LinearLayout> <!-- fin layout general -->