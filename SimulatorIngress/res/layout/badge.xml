<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_badge"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	
	<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bt_border_off"
            android:orientation="horizontal">
            <ImageView
	            android:id="@+id/ivPopupBadge"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/badge_hacker" />
            <TextView
                android:id="@+id/tvBadgeNom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/agent_badge_hacker"
                android:textColor="@color/color_off"
                android:textSize="24dp"
                android:textStyle="bold" />
	</LinearLayout>
	
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/bt_border_off"
		android:orientation="vertical" >
	
		<!-- bronze -->

		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical" >

		    <TextView
		        android:id="@+id/tvBadgeInfo"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:gravity="center"
		        android:paddingLeft="15dp"
		        android:text="2000000"
		        android:textColor="@color/color_off"
		        android:textSize="16sp"
		        android:textStyle="bold" />

		</LinearLayout>

		<LinearLayout
		    android:id="@+id/ll_1"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical" >

			<LinearLayout
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:orientation="horizontal" >
		        <ImageView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:background="@drawable/agent_bronze_very_small" />
		        <TextView
		            android:id="@+id/tvBronze"
		            android:layout_width="match_parent"
		            android:layout_height="match_parent"
		            android:gravity="center"
		            android:paddingLeft="15dp"
		            android:text="2000000"
		            android:textColor="@color/color_off"
		            android:textSize="16sp"
		            android:textStyle="bold" />
		    </LinearLayout>		
		</LinearLayout>
		
		<!-- silver -->

		<LinearLayout
		    android:id="@+id/ll_2"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical" >

			<LinearLayout
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal" >
		        <ImageView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:background="@drawable/agent_silver_very_small" />
		        <TextView
		            android:id="@+id/tvSilver"
		            android:layout_width="match_parent"
		            android:layout_height="match_parent"
		            android:gravity="center"
		            android:paddingLeft="15dp"
		            android:text="2000000"
		            android:textColor="@color/color_off"
		            android:textSize="16sp"
		            android:textStyle="bold" />
		    </LinearLayout>
		</LinearLayout>
		
		<!-- gold -->

		<LinearLayout
		    android:id="@+id/ll_3"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical" >

			<LinearLayout
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal" >
		        <ImageView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:background="@drawable/agent_gold_very_small" />
		        <TextView
		            android:id="@+id/tvGold"
		            android:layout_width="match_parent"
		            android:layout_height="match_parent"
		            android:gravity="center"
		            android:paddingLeft="15dp"
		            android:text="2000000"
		            android:textColor="@color/color_off"
		            android:textSize="16sp"
		            android:textStyle="bold" />
		    </LinearLayout>
		</LinearLayout>
		
		<!-- Black -->

		<LinearLayout
		    android:id="@+id/ll_4"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical" >

			<LinearLayout
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal" >
		        <ImageView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:background="@drawable/agent_black_very_small" />
		        <TextView
		            android:id="@+id/tvBlack"
		            android:layout_width="match_parent"
		            android:layout_height="match_parent"
		            android:gravity="center"
		            android:paddingLeft="15dp"
		            android:text="2000000"
		            android:textColor="@color/color_off"
		            android:textSize="16sp"
		            android:textStyle="bold" />
		    </LinearLayout>
		</LinearLayout>
		
		<!-- platinium -->

		<LinearLayout
		    android:id="@+id/ll_5"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical" >

			<LinearLayout
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal" >
		        <ImageView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:background="@drawable/agent_platinum_very_small" />
		        <TextView
		            android:id="@+id/tvPlatinium"
		            android:layout_width="match_parent"
		            android:layout_height="match_parent"
		            android:gravity="center"
		            android:paddingLeft="15dp"
		            android:text="2000000"
		            android:textColor="@color/color_off"
		            android:textSize="16sp"
		            android:textStyle="bold" />
		    </LinearLayout>
		</LinearLayout>

    </LinearLayout>
</LinearLayout>